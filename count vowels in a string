import java.util.Scanner;
class Main {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        String a= sc.nextLine();
        char b;
        int count=0;
        for(int i=0;i< a.length();i++){
            b=a.charAt(i);
            if(b=='a'||b=='e'||b=='i'||b=='o'||b=='u'){
                count++;
            }
        
        }
        System.out.println(count);

    }
}
